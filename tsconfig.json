{
  "compilerOptions": {
    "target": "ES2022", // Modern JavaScript output
    "module": "ES2022", // For ESM (your package uses "type": "module")
    "lib": ["ES2022"], // No need for DOM libraries in backend
    "moduleResolution": "node",
    "outDir": "dist", // Where compiled JS files will go
    "rootDir": "src", // Your source TypeScript files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false, // Usually avoid JS files in TypeScript backend
    "noEmit": false, // We DO want to emit output for build
    "isolatedModules": false // Not needed unless using `tsc` with ES modules directly
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
